   public void clickHandlerUp(ActionEvent e) 
   {
	   int temp=po.getRow();
	   if(maze[po.getColumn()][po.getRow()-1] != '1')
	   //W is a wall
	   {
		maze[po.getColumn()][po.getRow()]='9';
	   	//9 is been before
	   	temp--;
	   	po.setRow(temp);
	   	maze[po.getColumn()][po.getRow()]='X';
	   	//x is the player moving
	   }
	   else
	   {
		   System.out.println("RAN INTO WALL!");
	   }   
   }
   
